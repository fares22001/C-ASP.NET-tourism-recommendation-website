@model trial.Models.Person

@{
    ViewData["Title"] = "Delete User";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="DeleteConfirmed" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete User</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="MobileNumber">Mobile Number</label>
            <input asp-for="MobileNumber" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label asp-for="Role">Role</label>
            <input asp-for="Role" class="form-control" disabled />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-action="Index" asp-controller="Admin" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
