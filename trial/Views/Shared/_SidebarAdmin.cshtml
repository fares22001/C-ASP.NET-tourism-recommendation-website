@{
    Layout = null;
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/adminDashboard.css">
}


<section id="sidebar">
    <a class="brand" asp-controller="Admindashboard" asp-action="Index">
        <i class='bx bxs-home'></i>
        <span class="text">AdminHub</span>
    </a>
    <ul class="side-menu top">
       
        <li>
            <a asp-area="" asp-controller="Trip" asp-action="Index">
                <i class='bx bxs-map'></i>
                <span class="text">View Trips</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Admin" asp-action="Index">
                <i class='bx bxs-user'></i>
                <span class="text">View Users</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Country" asp-action="Index">
                <i class='bx bx-world'></i>
                <span class="text">View Countries</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="Interest" asp-action="Index">
                <i class='bx bxs-plus-square'></i>
                <span class="text">View interests</span>
            </a>
        </li>
        <li>
            <a asp-area="" asp-controller="book" asp-action="Index">
                <i class='bx bxs-plus-square'></i>
                <span class="text">View Bookings</span>
            </a>
        </li>
    </ul>
    <ul class="side-menu">
        <li>
            <a asp-controller="Person" asp-action="Logout" class="logout">
                <i class='bx bx-log-out'></i>
                <span class="text">Logout</span>
            </a>
        </li>
    </ul>
</section>
