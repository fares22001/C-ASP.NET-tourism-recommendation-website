@model trial.Models.Trips

@{
    ViewData["Title"] = "Edit Trip";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="tripName">Trip Name</label>
        <input asp-for="tripName" class="form-control" />
        <span asp-validation-for="tripName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryId">Country</label>
        <select asp-for="CountryId" asp-items="ViewBag.Countries" class="form-control"></select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientFile">Image</label>
        <input type="file" asp-for="clientFile" class="form-control" onchange="loadFile(event)" />
        <img id="myImg" height="200" style="margin-top: 10px;" />
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
    <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to Trips</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
    <script>
        var loadFile = function (event) {
            var reader = new FileReader();
            reader.onload = function () {
                var myImg = document.getElementById('myImg');
                myImg.src = reader.result;
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
}
