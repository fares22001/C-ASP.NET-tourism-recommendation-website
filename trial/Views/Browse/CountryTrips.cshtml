@model IEnumerable<trial.Models.Trips>

@{
    ViewData["Title"] = "View Countries";
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

}
<h1>Trips in @ViewBag.CountryName</h1>

<div class="container">
    <div class="row">
        @foreach (var trip in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <img src="@trip.imageSrc" class="card-img-top" alt="@trip.tripName" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@trip.tripName</h5>
                        <p class="card-text"><strong>Price:</strong> @trip.Price</p>
                        <a href="@Url.Action("TripDetails", "Browse", new { tripId = trip.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>